{
	"name": "u",
	"description": "Minimalistic URL shortener as a microservice",
	"version": "1.0.0",
	"author": "Faye Keller",
	"license": "GPL-3.0",
	"repository": "git@github.com:pinkcig/u.git",
	"main": "build/index.js",
	"scripts": {
		"build": "tsc -b src",
		"clean": "shx rm -rf dist",
		"update": "yarn up \"*\" -i",
		"dev": "tsc-watch -b src --onSuccess \"node --enable-source-maps .\"",
		"dev:docker": "docker-compose up --force-recreate",
		"prod:docker": "docker build . -t u",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"test": "cross-env NODE_ENV=test jest"
	},
	"devDependencies": {
		"@sapphire/ts-config": "^3.3.0",
		"@types/cors": "^2",
		"@types/express": "^4",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.14",
		"@types/prettier": "^2",
		"@types/supertest": "^2.0.11",
		"@types/tsc-watch": "^4",
		"cross-env": "^7.0.3",
		"jest": "^27.5.1",
		"jest-circus": "^27.5.1",
		"prettier": "^2.5.1",
		"prisma": "^3.10.0",
		"shx": "^0.3.4",
		"supertest": "^6.2.2",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.7.0",
		"tsc-watch": "^4.6.2",
		"typescript": "^4.6.2"
	},
	"packageManager": "yarn@3.2.0",
	"dependencies": {
		"@prisma/client": "3.10.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"helmet": "^5.0.2",
		"tedis": "^0.1.12",
		"tslog": "^3.3.2"
	}
}
