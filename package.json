{
	"name": "u",
	"description": "Minimalistic URL shortener as a microservice",
	"version": "1.0.0",
	"author": "Faye Keller",
	"license": "GPL-3.0",
	"repository": "git@github.com:pinkcig/u.git",
	"main": "build/index.js",
	"scripts": {
		"build": "tsc -b src",
		"clean": "shx rm -rf dist",
		"update": "yarn up \"*\" -i",
		"dev": "tsc -b src --watch",
		"prepublishOnly": "yarn run clean && yarn run build",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"devDependencies": {
		"@sapphire/ts-config": "^3.3.0",
		"@types/cors": "^2",
		"@types/express": "^4",
		"@types/node": "^17.0.14",
		"@types/prettier": "^2",
		"prettier": "^2.5.1",
		"prisma": "^3.10.0",
		"shx": "^0.3.4",
		"typescript": "^4.6.2"
	},
	"packageManager": "yarn@3.2.0",
	"dependencies": {
		"@prisma/client": "3.10.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"helmet": "^5.0.2",
		"tslog": "^3.3.2"
	}
}
